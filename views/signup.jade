html
    head(lang="en")
        title LSR
        link(rel='stylesheet', href='/stylesheets/main.css')
        script(type='text/javascript', src='/javascripts/jquery-1.7.1.js')
    body
        div#container
            div#header
                div#logo
                    a(href='/',style="text-decoration:none") LSR
            div#fb-root
            div#sub_container
                div#id_login
                    div#hr_login
                        p Sign Up
                    form#form(method="post", action="/signedup")
                        div#form-div
                            label Email
                            input#email(type="email", name="email")
                            label Password
                            input#password(type="password", name="password")
                            label First Name
                            input#password(type="text", name="firstName")
                            label Last Name
                            input#password(type="text", name="lastName")
                        div#button
                            input#submit(type="submit", value="Sign up")
