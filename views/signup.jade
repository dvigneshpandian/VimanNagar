                //div#social_network
                    div#social_link
                        a#twitter
                            div#twitter_text Log in with Twitter
                        a#login(href="/fbauth")
                            div#facebook_text Log in with Facebook
                        a#linkedin
                            div#linkedin_text Log in with LinkedIn
                //div#signup
                    p Need an account?
                        a(href="/signup") Sign Up
